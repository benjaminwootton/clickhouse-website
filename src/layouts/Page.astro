---
// Components
import Header from 'components/Layout/Header.astro';
import Footer from 'components/Layout/Footer.astro';
import Seo from 'components/Layout/Seo.astro';

// Styles
import 'styles/Global.scss';

interface Props {
	title: string;
	description: string;
    noindex?: boolean;
}

const { title, description, noindex } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Seo
			title={title}
			description={description}
			noindex={noindex}
		/>
		<script defer data-domain="jetstreamanalytics.io" src="https://plausible.io/js/script.js"></script>
	</head>
	<body>

		<Header />

		<main>
			<slot />
		</main>

		<Footer />

		<script src="/scripts/stripe.js" is:inline></script>
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const gradientCanvas = document.querySelector('.gradient-canvas');
            if (gradientCanvas) {
              // Initialize gradient effect here
              console.log('Gradient canvas initialized');
              // Example: gradientCanvas.style.background = 'linear-gradient(to right, #ff7e5f, #feb47b)';
            }
          });
        </script>

	</body>
</html>