---
// Components
import Header from 'components/Layout/Header.astro';
import Footer from 'components/Layout/Footer.astro';
import Seo from 'components/Layout/Seo.astro';

// Styles
import 'styles/Global.scss';

interface Props {
	title: string;
	description: string;
    noindex?: boolean;
}

const { title, description, noindex } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Seo
			title={title}
			description={description}
			noindex={noindex}
		/>
		<script defer data-domain="jetstreamanalytics.io" src="https://plausible.io/js/script.js"></script>
		<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=AW-408874416">
</script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'AW-408874416');
</script>
	</head>
	<body>

		<Header />

		<main>
			<slot />
		</main>

		<Footer />

	</body>
</html>