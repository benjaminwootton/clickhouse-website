<style>
    @keyframes float {
        0% {
            transform: translate(0, 0) rotate(0deg) scale(1);
        }
        33% {
            transform: translate(60px, -60px) rotate(3deg) scale(1.05);
        }
        66% {
            transform: translate(-50px, 50px) rotate(-2deg) scale(0.95);
        }
        100% {
            transform: translate(0, 0) rotate(0deg) scale(1);
        }
    }

    .gradient-blob {
        animation: float 8s ease-in-out infinite;
        transform-origin: center;
    }

    .gradient-blob:nth-child(1) { animation-delay: -1s; }
    .gradient-blob:nth-child(2) { animation-delay: -2s; }
    .gradient-blob:nth-child(3) { animation-delay: -3s; }
    .gradient-blob:nth-child(4) { animation-delay: -4s; }
    .gradient-blob:nth-child(5) { animation-delay: -5s; }
    .gradient-blob:nth-child(6) { animation-delay: -6s; }

    @media (max-width: 768px) {
        .gradient-blob {
            transform: scale(1.5);
        }
        
        svg {
            top: 0% !important;
            left: -50% !important;
            width: 200% !important;
            height: 150% !important;
            opacity: 0.9 !important;
        }
    }
</style>

